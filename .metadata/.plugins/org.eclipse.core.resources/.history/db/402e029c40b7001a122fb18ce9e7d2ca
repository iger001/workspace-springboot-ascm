package com.datacubit.springboot.escuela.model.service;

import java.util.Arrays;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.datacubit.springboot.escuela.model.Estudiante;

//@Service
public class EscuelaServiceImpl implements IEscuelaService {
	
	@Autowired
	private RestTemplate clienteRest;

	@Override
	public List<Estudiante> findAll() {
		//List<Estudiante> estudiantes = Arrays.asList(clienteRest.getForObject("http://localhost:8080/getEstudiantes", Estudiante[].class));
		List<Estudiante> estudiantes = Arrays.asList(clienteRest.getForObject("http://servicio-estudiantes/getEstudiantes", Estudiante[].class));
		//servicio-estudiante.ribbon.listOfServers=localhost:8080,localhost:8081
		//dependencia POM ribbon
		//RibbonCliente
		return estudiantes;
	}

	@Override
	public Estudiante findById(Integer id) {
		Map<String, String> parameterValues = new HashMap<String, String>();
		parameterValues.put("id", id.toString());
		//Estudiante estudiante = clienteRest.getForObject("http://localhost:8080/getEstudiante/{id}", Estudiante.class, parameterValues);
		Estudiante estudiante = clienteRest.getForObject("http://servicio-estudiantes/getEstudiante/{id}", Estudiante.class, parameterValues);
		return estudiante;
	}

}
