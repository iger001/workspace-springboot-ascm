package com.datacubit.springboot.escuela.model.service;

import java.util.Arrays;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.datacubit.springboot.escuela.model.Escuela;
import com.datacubit.springboot.escuela.model.Estudiante;

@Service
public class EscuelaServiceImpl implements IEscuelaService {
	
	@Autowired
	private RestTemplate clienteRest;

	@Override
	public List<Escuela> findAll() {
		List<Estudiante> estudiantes = Arrays.asList(clienteRest.getForObject("http://localhost:8080/getEstudiantes", Estudiante[].class));
		return estudiantes;
	}

	@Override
	public Escuela findById(Integer id, String nombreEscuela) {
		return null;
	}

}
